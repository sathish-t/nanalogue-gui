{
    "extends": [
        "html-validate:recommended",
        "html-validate:document"
    ],
    "rules": {
        "attr-case": ["error", { "style": "lowercase", "ignoreForeign": false }],
        "attr-delimiter": "error",
        "attr-quotes": ["error", { "style": "double", "unquoted": false }],
        "attr-spacing": "error",
        "attribute-allowed-values": "error",
        "attribute-boolean-style": ["error", { "style": "omit" }],
        "attribute-empty-style": ["error", { "style": "omit" }],
        "attribute-misuse": "error",
        "area-alt": "error",
        "aria-hidden-body": "error",
        "aria-label-misuse": ["error", { "allowAnyNamable": false }],
        "class-pattern": ["error", { "pattern": "kebabcase" }],
        "close-attr": "error",
        "close-order": "error",
        "deprecated": "error",
        "deprecated-rule": "error",
        "doctype-html": "error",
        "doctype-style": ["error", { "style": "uppercase" }],
        "element-case": ["error", { "style": "lowercase" }],
        "element-name": "error",
        "element-permitted-content": "error",
        "element-permitted-occurrences": "error",
        "element-permitted-order": "error",
        "element-permitted-parent": "error",
        "element-required-ancestor": "error",
        "element-required-attributes": "error",
        "element-required-content": "error",
        "empty-heading": "error",
        "empty-title": "error",
        "form-dup-name": "error",
        "heading-level": ["error", {
            "allowMultipleH1": false,
            "minInitialRank": "h1"
        }],
        "hidden-focusable": "error",
        "id-pattern": ["error", { "pattern": "kebabcase" }],
        "input-attributes": "error",
        "input-missing-label": "error",
        "long-title": "error",
        "map-dup-name": "error",
        "map-id-name": "error",
        "meta-refresh": "error",
        "missing-doctype": "error",
        "multiple-labeled-controls": "error",
        "no-abstract-role": "error",
        "no-autoplay": ["error", { "include": ["audio", "video"] }],
        "no-conditional-comment": "error",
        "no-deprecated-attr": "error",
        "no-dup-attr": "error",
        "no-dup-class": "error",
        "no-dup-id": "error",
        "no-implicit-button-type": "error",
        "no-implicit-close": "error",
        "no-implicit-input-type": "error",
        "no-inline-style": ["error", { "allowedProperties": [] }],
        "no-missing-references": "error",
        "no-multiple-main": "error",
        "no-raw-characters": ["error", { "relaxed": false }],
        "no-redundant-aria-label": "error",
        "no-redundant-for": "error",
        "no-redundant-role": "error",
        "no-self-closing": ["error", { "ignoreForeign": false }],
        "no-style-tag": ["error", { "allowTemplate": false }],
        "no-trailing-whitespace": "error",
        "no-unknown-elements": ["error", { "exclude": ["bam-resource-input", "mod-filter-input"] }],
        "no-unused-disable": "error",
        "no-utf8-bom": "error",
        "prefer-button": "error",
        "prefer-native-element": "error",
        "prefer-tbody": "error",
        "require-sri": "off",
        "require-csp-nonce": "off",
        "script-element": "error",
        "script-type": "error",
        "svg-focusable": "error",
        "tel-non-breaking": "error",
        "text-content": "error",
        "unique-landmark": "error",
        "unrecognized-char-ref": "error",
        "valid-autocomplete": "error",
        "valid-for": "error",
        "valid-id": ["error", { "relaxed": false }],
        "void-content": "error",
        "void-style": ["error", { "style": "omit" }],
        "wcag/h30": "error",
        "wcag/h32": "error",
        "wcag/h36": "error",
        "wcag/h37": "error",
        "wcag/h63": "error",
        "wcag/h67": "error",
        "wcag/h71": "error"
    }
}
