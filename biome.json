{
    "$schema": "https://biomejs.dev/schemas/2.0.0/schema.json",
    "files": {
        "includes": ["**/*.ts", "**/*.js", "**/*.json"]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4
    },
    "linter": {
        "enabled": true
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "double",
            "semicolons": "always"
        }
    }
}
